# NanoBanana Project - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to Git!

# Google Cloud / NanoBanana API Configuration
GOOGLE_API_KEY=your_api_key_here
NANOBANANA_API_KEY=your_api_key_here
GOOGLE_CLOUD_PROJECT=your_project_id

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# PostgreSQL Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/nanobanana
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nanobanana
DB_USER=postgres
DB_PASSWORD=

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Rate Limiting
DAILY_COST_LIMIT_USD=10.0
MONTHLY_COST_LIMIT_USD=250.0

# GCS Configuration (for image caching)
GCS_BUCKET_NAME=nanobanana-cache
GCS_PROJECT_ID=your_project_id

# Security
JWT_SECRET_KEY=your_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
